package TestSuit;

import org.apache.log4j.Logger;
import org.openqa.selenium.WebDriver;
import org.testng.Assert;

import SetBrowser.SelectAndOpenBrowser;
import launchApplication.OpenApplication;

public class TC1ApplicationTitleVerification {
	static WebDriver driver;
	static Logger log = Logger.getLogger("deloyinglogeer");

	public static void main(String[] args) {
		OpenApplication Object1 = new OpenApplication();
		SelectAndOpenBrowser   Object2 = new SelectAndOpenBrowser();
		Object2.SelectBrowser(driver , "Mozila" );
		Object1.SetURL("www.google.com");
		String title = driver.getTitle();
		Assert.assertEquals(title, "+google+");
		log.assertLog( true, "sucessful page");
		}

}
