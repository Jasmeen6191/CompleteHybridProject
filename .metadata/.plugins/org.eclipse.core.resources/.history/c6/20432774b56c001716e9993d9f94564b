	Assert.assertEquals(title, "+google+");
	log.assertLog( true, "sucessful page");
}
	public static void main(String[] args) {
	    SelectAndOpenBrowser   Object1 = new SelectAndOpenBrowser();
		OpenApplication Object2 = new OpenApplication();
		Object1.SelectBrowser(driver, "Mozila");
