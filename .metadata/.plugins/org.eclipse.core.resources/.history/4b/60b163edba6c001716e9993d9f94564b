package SetBrowser;

import org.apache.log4j.Logger;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.safari.SafariDriver;

public class SelectAndOpenBrowser {
	WebDriver driver;

	Logger log = Logger.getLogger("deloyinglogeer");

	public void SelectBrowser(String BrowserName, String url) {
		{
			if (BrowserName.equalsIgnoreCase("Mozila")) {
				this.driver = new FirefoxDriver();
			}
			if (BrowserName.equalsIgnoreCase("Chrome")) {
				this.driver = new ChromeDriver();
				
			}
			if (BrowserName.equalsIgnoreCase("Safari")) {
				this.driver = new SafariDriver();
			}
			this.driver.manage().window().maximize();
			log.debug("Browser Launched");
			driver.get("url");
			System.out.println("Application URL enetered");

		}
	}

}
